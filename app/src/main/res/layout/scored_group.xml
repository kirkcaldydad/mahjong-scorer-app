<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="house.mcintosh.mahjong.ui.EnterHandActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="75"
        android:gravity="left"
        android:weightSum="100">

        <LinearLayout
            android:id="@+id/layoutTileGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="45"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgTile0"
                android:layout_width="@dimen/displayTileWidth"
                android:layout_height="@dimen/displayTileHeight"
                android:layout_margin="@dimen/displayTileMargin"
                android:background="@drawable/tile_border"
                android:contentDescription="@string/enteredTile"
                android:gravity="left|center"
                android:padding="@dimen/displayTilePadding"
                android:visibility="visible"
                app:srcCompat="@drawable/circles1" />

            <ImageView
                android:id="@+id/imgTile1"
                android:layout_width="@dimen/displayTileWidth"
                android:layout_height="@dimen/displayTileHeight"
                android:layout_margin="@dimen/gridTileMargin"
                android:background="@drawable/tile_border"
                android:contentDescription="@string/enteredTile"
                android:gravity="center"
                android:padding="@dimen/displayTilePadding"
                android:visibility="invisible"
                app:srcCompat="@drawable/circles1" />

            <ImageView
                android:id="@+id/imgTile2"
                android:layout_width="@dimen/displayTileWidth"
                android:layout_height="@dimen/displayTileHeight"
                android:layout_margin="@dimen/displayTileMargin"
                android:background="@drawable/tile_border"
                android:contentDescription="@string/enteredTile"
                android:gravity="center"
                android:padding="@dimen/displayTilePadding"
                android:visibility="invisible"
                app:srcCompat="@drawable/circles1" />

            <ImageView
                android:id="@+id/imgTile3"
                android:layout_width="@dimen/displayTileWidth"
                android:layout_height="@dimen/displayTileHeight"
                android:layout_margin="@dimen/displayTileMargin"
                android:background="@drawable/tile_border"
                android:contentDescription="@string/enteredTile"
                android:gravity="center"
                android:padding="@dimen/displayTilePadding"
                android:visibility="visible"
                app:srcCompat="@drawable/circles1" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtGroupScore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:paddingRight="@dimen/scorePaddingRight"
            android:textAlignment="viewEnd"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/txtHandMultipliers"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:gravity="right"
            android:textAlignment="textStart"
            android:textSize="30sp" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/deleteButtonTopMargin"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/deleteButton"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_delete" />

</LinearLayout>